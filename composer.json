{
    "name": "prooph/prooph-event-store-module",
    "description": "ZF2 module that provides default functionality to use ProophEventStore in a ZF2 application",
    "type": "library",
    "license": "BSD-3-Clause",
    "homepage": "https://github.com/prooph/ProophEventStoreModule",
    "authors": [
        {
            "name": "Alexander Miertsch",
            "email": "contact@prooph.de",
            "homepage": "http://www.prooph.de/"
        }
    ],
    "keywords": [
        "php",
        "EventSourcing",
        "EventStore",
        "library",
        "DDD",
        "prooph",
        "zf2"
    ],
    "require": {
        "php": ">=5.4",
        "prooph/event-store" : "~1.0",
        "prooph/event-store-zf2-adapter" : "~0.1",
        "codeliner/array-reader" : "~1.1",
        "zendframework/zend-loader" : "~2.3",
        "zendframework/zend-servicemanager" : "~2.3",
        "zendframework/zend-modulemanager" : "~2.3",
        "zendframework/zend-mvc" : "~2.3"
    },
    "suggest": {
        "prooph/prooph-service-bus-module": "Use ProophServiceBus within your ZF2 project",
        "prooph/event-store-doctrine-adapter" : "If you prefer doctrine, a doctrine-adapter is available, too"
    },
    "require-dev": {
        "phpunit/phpunit": "3.7.*",
        "zendframework/zend-form" : "~2.3",
        "zendframework/zend-view" : "~2.3",
        "zendframework/zend-log" : "~2.3",
        "zendframework/zend-config" : "~2.3",
        "satooshi/php-coveralls": "dev-master"
    },
    "autoload": {
        "psr-0": { 
            "ProophEventStoreModule\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-0": {
            "ProophEventStoreModuleTest\\": "tests/"
        }
    }
}
